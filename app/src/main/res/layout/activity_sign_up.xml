<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:layout_weight="0.25"
        android:src="@drawable/sign_cover2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/create_account_text" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/radius_edittext_signin"
            android:fontFamily="@font/dinnextltpro_bold"
            android:hint="EMAIL"
            android:padding="15dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:background="@drawable/radius_edittext_signin"
            android:fontFamily="@font/dinnextltpro_bold"
            android:hint="USERNAME"
            android:padding="15dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radius_edittext_signin"
            android:fontFamily="@font/dinnextltpro_bold"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:text="Sign Up"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/dinnextltpro_bold"/>
            <ImageView
                android:id="@+id/btSignUp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/submit_btn"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:elevation="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/dinnextltpro_bold"
                android:text="@string/already_signed_up"
                android:layout_alignParentStart="true"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/dinnextltpro_bold"
                android:textColor="@color/textColor"
                android:text="V1.0.0 alpha"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>