<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_match_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/victory_box"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvMatchStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/dinnextltpro_medium"
        android:text="VICTORY!"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvMatchScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/dinnextltpro_regular"
        android:gravity="center_horizontal"
        android:text="13 - 8"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvMatchKda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/dinnextltpro_regular"
        android:gravity="end"
        android:text="18/11/5"
        android:textColor="#000"
        android:textSize="18sp" />
</LinearLayout>